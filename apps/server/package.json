{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "lint": "eslint .",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "auth:generate": "bunx --bun @better-auth/cli generate --output ./src/db/schema/auth.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@orpc/client": "^1.9.1",
    "@orpc/openapi": "^1.9.1",
    "@orpc/server": "^1.9.1",
    "@orpc/zod": "^1.9.1",
    "better-auth": "^1.3.18",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.9",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/bun": "^1.2.22",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.36.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "tsdown": "^0.15.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1"
  }
}
